{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ESP-IDF Debug",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${config:idf.esp32ToolsPath}/tools/xtensa-esp-elf/bin/xtensa-esp32-elf-gdb${config:idf.toolchainSuffix}",
            "args": [
                "-x",
                "gdb",
                "${workspaceFolder}/build/scoreboard_play_clock.elf"
            ],
            "stopAtEntry": true,
            "serverLaunchTimeoutSecs": 10
        }
    ]
}